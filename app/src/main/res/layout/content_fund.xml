<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="uk.co.nyakeh.stacks.DashboardActivity">

    <TextView
        android:id="@+id/fund_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:paddingBottom="64dp"
        android:text="@string/fund_header"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <android.support.v7.widget.CardView
        android:id="@+id/fund_vmidPrice_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fund_header"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="-48dp">

        <TextView
            android:id="@+id/fund_vmidPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/auxiliary_margin"
            android:textColor="@color/colorPrimaryText"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:text="£28.50"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/fund_vmidChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fund_vmidPrice_card"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="+0.09"/>

    <android.support.v7.widget.CardView
        android:id="@+id/fund_vwrlPrice_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fund_vmidChange"
        android:layout_margin="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/fund_vwrlPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/auxiliary_margin"
            android:textColor="@color/colorPrimaryText"
            android:textSize="40sp"
            android:textStyle="bold"
            tools:text="£54.47"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/fund_vwrlChange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fund_vwrlPrice_card"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="-0.27"/>
</RelativeLayout>
