<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/auxiliary_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/fund_vmid_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/auxiliary_margin"
            android:layout_marginTop="@dimen/auxiliary_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fund_symbol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="VMID"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/fund_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/auxiliary_margin"
                android:textColor="@color/colorPrimaryText"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:text="Â£28.50"/>

            <TextView
                android:id="@+id/fund_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="+0.09"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>